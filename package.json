  "repository": {
    "url": "https://github.com/Gnuxie/matrix-protection-suite.git",
    "type": "git"
  },
  "scripts": {
    "start": "yarn tsc --project tsconfig.json --watch",
    "build": "rm -rf dist && yarn tsc --project tsconfig.json && yarn lint && yarn make:docs",
    "lint": "yarn eslint src -c .eslintrc.js --ext .ts && yarn prettier src --check",
    "make:docs": "typedoc",
    "test": "jest --coverage",
    "test:ci": "cross-env CI=1 jest",
    "prepare": "husky install && yarn build"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^19.2.2",
    "@sinclair/typebox": "0.32.31",
    "@types/crypto-js": "^4.2.2",
    "@types/glob-to-regexp": "^0.4.4",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.13.0",
    "@typescript-eslint/eslint-plugin": "^7.11.0",
    "@typescript-eslint/parser": "^7.11.0",
    "cross-env": "^7.0.3",
    "eslint": "^9.4.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^9.0.11",
    "jest": "^29.4.3",
    "jest-ts-auto-mock": "^2.1.0",
    "lint-staged": "^15.2.5",
    "postcss": "^8.4.38",
    "prettier": "^3.2.5",
    "ts-auto-mock": "^3.7.3",
    "ts-jest": "^29.1.4",
    "tslib": "^2.5.0",
    "ttypescript": "^1.5.15",
    "typedoc": "^0.25.13",
    "typescript": "^5.4.5",
    "wait-for-expect": "^3.0.2"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "./node_modules/.bin/prettier --write",
      "./node_modules/.bin/eslint"
    ]
  },
  "prettier": {
    "tabWidth": 2,
    "useTabs": false,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "dependencies": {
    "await-lock": "^2.2.2",
    "crypto-js": "^4.2.0",
