{
  "name": "@gnuxie/matrix-protection-suite",
  "version": "0.22.0",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "author": {
    "name": "Gnuxie",
    "email": "Gnuxie@protonmail.com"
  },
  "license": "AFL-3.0",
  "repository": {
    "url": "https://github.com/Gnuxie/matrix-protection-suite.git",
    "type": "git"
  },
  "scripts": {
    "start": "yarn tsc --project tsconfig.json --watch",
    "build": "rm -rf dist && yarn tsc --project tsconfig.json && yarn lint && yarn make:docs",
    "lint": "yarn eslint src src/**/*.ts && yarn prettier src --check",
    "make:docs": "typedoc",
    "test": "jest --coverage",
    "test:ci": "cross-env CI=1 jest",
    "ts-patch-for-ts-auto-mock": "ts-patch install -s",
    "prepare": "husky install && yarn build && yarn ts-patch-for-ts-auto-mock"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^17.4.4",
    "@eslint/js": "^9.6.0",
    "@sinclair/typebox": "0.32.29",
    "@types/crypto-js": "^4.2.2",
    "@types/eslint__js": "^8.42.3",
    "@types/glob-to-regexp": "^0.4.1",
    "@types/jest": "^29.4.0",
    "@types/node": "^18.14.0",
    "cross-env": "^7.0.3",
    "eslint": "^9.6.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "jest-ts-auto-mock": "^2.1.0",
    "lint-staged": "^13.1.2",
    "postcss": "^8.4.21",
    "prettier": "^3.3.2",
    "ts-auto-mock": "^3.7.3",
    "ts-jest": "^29.0.5",
    "ts-patch": "^3.2.1",
    "tslib": "^2.5.0",
    "typedoc": "^0.26.3",
    "typescript": "^5.5.3",
    "typescript-eslint": "^7.15.0",
    "wait-for-expect": "^3.0.2"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "./node_modules/.bin/prettier --write",
      "./node_modules/.bin/eslint"
    ]
  },
  "prettier": {
    "tabWidth": 2,
    "useTabs": false,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "dependencies": {
    "await-lock": "^2.2.2",
    "crypto-js": "^4.2.0",
    "glob-to-regexp": "^0.4.1",
    "immutable": "^5.0.0-beta.5",
    "ulidx": "^2.3.0"
  },
  "peerDependencies": {
    "@sinclair/typebox": "0.32.29"
  },
  "publishConfig": {
    "@gnuxie:registry": "https://registry.npmjs.org"
  }
}
