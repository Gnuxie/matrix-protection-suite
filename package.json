{
  "name": "matrix-protection-suite",
  "version": "0.7.0",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "author": {
    "name": "Gnuxie",
    "email": "Gnuxie@protonmail.com"
  },
  "license": "AFL-3.0",
  "private": true,
  "repository": {
    "url": "https://github.com/Gnuxie/matrix-protection-suite.git",
    "type": "git"
  },
  "scripts": {
    "start": "yarn tsc --project tsconfig.json --watch",
    "build": "rm -rf dist && yarn tsc --project tsconfig.json && yarn lint && yarn make:docs",
    "lint": "yarn eslint . -c .eslintrc.js --ext .ts",
    "make:docs": "typedoc",
    "test": "jest --coverage",
    "test:ci": "cross-env CI=1 jest",
    "prepare": "husky install && yarn build"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^17.4.4",
    "@sinclair/typebox": "~0.31.15",
    "@types/glob-to-regexp": "^0.4.1",
    "@types/jest": "^29.4.0",
    "@types/node": "^18.14.0",
    "@typescript-eslint/eslint-plugin": "^5.53.0",
    "@typescript-eslint/parser": "^5.53.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.34.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.3",
    "jest": "^29.4.3",
    "lint-staged": "^13.1.2",
    "postcss": "^8.4.21",
    "prettier": "^2.8.4",
    "ts-jest": "^29.0.5",
    "tslib": "^2.5.0",
    "typedoc": "^0.23.25",
    "typescript": "^4.9.5"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "./node_modules/.bin/prettier --write",
      "./node_modules/.bin/eslint"
    ]
  },
  "prettier": {
    "tabWidth": 2,
    "useTabs": false,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "dependencies": {
    "await-lock": "^2.2.2",
    "crypto-js": "^4.1.1",
    "glob-to-regexp": "^0.4.1",
    "immutable": "^5.0.0-beta.4",
    "ulidx": "^2.1.0"
  },
  "peerDependencies": {
    "@sinclair/typebox": "~0.31.15"
  }
}
