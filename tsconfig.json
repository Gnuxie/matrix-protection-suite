{
  "compilerOptions": {
    "target": "es2015",
    "module": "ESNext",
    "lib": [
      "ESNext",
    ],
    "declaration": true,
    "declarationDir": "dist",
    "outDir": "dist",
    "sourceMap": true,
    "strict": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": false,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noImplicitAny": true,
  },
  "exclude": [
    "node_modules",
    "dist",
    "src/__tests__",
    "**/*.test.tsx",
    "**/*.spec.tsx",
  ],
  "include": [
    "src/**/*"
  ]
}
